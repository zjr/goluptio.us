%head
	%meta{:charset => 'uft-8'}
	%meta{:'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
	%title Goluptious: Michigan Web Design, Web Development &amp; Single Page Apps
	%meta{:name => 'description', :content => 'Goluptious web design and development from Flint, Michigan with love. Specialized in single page web app development with Backbone.  Goluptious means tip&mdash;top.'}
	%meta{:name => 'keywords', :content => 'web design, web development, michigan, goluptious, glumptious, backbone, ember, mvc, client-side mvc, javascript mvc, client-side framework, front end mvc, front end framework, template, single-page, web app, flint, rails integration'}
	%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}

	= stylesheet_link_tag    "application", :media => "all"
	= javascript_include_tag "modernizr"
	= csrf_meta_tags

%body

	= yield

	%script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"}
	%script window.jQuery || document.write('<script src="/assets/jquery.js"><\/script>')

	= javascript_include_tag "application"
	
